<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="false"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="10dp"
        android:background="?attr/colorPrimary"
        android:gravity="center_horizontal"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Barbershop Management App"
        app:titleMargin="0dp" />

    <TextView
        android:id="@+id/paymentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:text="@string/paymentTitle"
        android:textSize="34sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/serviceCard"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        app:cardBackgroundColor="#c7c7c7"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/serviceLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Service"
                android:textAlignment="center"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/appointmentLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appointment: "
                android:textAlignment="center"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/appointmentTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/barberLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Barber: "
                android:textAlignment="center"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/barberTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/hairstyleLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hairstyle: "
                android:textAlignment="center"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/hairstyleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/priceTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textAlignment="center"
                android:textSize="17sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/paymentDetailsCard"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        app:cardBackgroundColor="#c7c7c7"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/payementLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/paymentDetailsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Payment Details"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textAlignment="viewStart"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="291dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="15sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/cardNumberLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Card Number: "
                android:textAlignment="viewStart"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/cardNumber"
                android:layout_width="291dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/dateAndCVVLabels"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expiration Date"
                    android:textAlignment="viewStart"
                    android:textSize="15sp" />

                <Space
                    android:layout_width="100dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/CVCLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:text="CVC"
                    android:textAlignment="viewStart"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dateAndCVVET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">


                <EditText
                    android:id="@+id/monthET"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/divider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/dayET"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <Space
                    android:layout_width="100dp"
                    android:layout_height="0dp" />

                <EditText
                    android:layout_width="48dp"
                    android:layout_height="48dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/payButton"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#c7c7c7"
        android:text="Pay"
        android:textColor="@color/black" />

</LinearLayout>
