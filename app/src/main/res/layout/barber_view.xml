<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="#BBBB">

            <TextView
                android:id="@+id/nameView"
                android:layout_width="match_parent"
                android:fontFamily="@font/courgette"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="@string/barber_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/ratingView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/courgette"
                android:layout_alignBottom="@id/nameView"
                android:layout_marginBottom="-27dp"
                android:text="@string/barber_rate"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


            <Button
                android:id="@+id/reviewBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/courgette"
                android:layout_below="@id/faveBt"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignEnd="@id/ratingView"
                android:text="Reviews" />


            <ToggleButton
                android:id="@+id/faveBt"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignRight="@id/nameView"
                android:background="@drawable/off"
                android:textOn=""
                android:textOff="" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>



